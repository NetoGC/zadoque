{% extends "layout.njk" %}

{% block head %} 
    <title>Ministrações - Luciano Subirá</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    {% endblock %}


{% block content %}

    
    <div id="wrapper">
    <h1>Ministrações</h1>
    </div>


   <section class="cards">

    {% for item in items %}
    <div class="card" id="{{item.id}}">
        <div class="card__image-container  {{'featured-wrapper' if item.featured}}">
            <img src="https://img.youtube.com/vi/{{item.id}}/0.jpg" alt="Imagem {{item.title}}">
            {% if item.featured %}
                <div class="featured">Featured</div>
            {% endif %}
        </div>
        <div class="card__content">
            <p>{{item.title}}</p>
        </div>
            <div class="card__info">
                <p>{{item.duratin}}65 min</p>
                <p class="card__price">{{item.price}}</p>
            </div>
    </div>

    {% endfor %}

   </section>

   <script src="/scripts.js"></script>


   {% endblock %}